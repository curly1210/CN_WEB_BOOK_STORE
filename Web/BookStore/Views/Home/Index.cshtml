        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="row" style="margin-top:40px">
        <div class="col-3">
            <a href="#">
                <img src="https://nhasachphuongnam.com/images/promo/190/Banner_Songxanhmoingay__2_.png" style="width:100%;object-fit:cover">
            </a>
        </div>
        <div class="col-3">
            <a href="#">
                <img src="https://nhasachphuongnam.com/images/promo/190/Banner_niemvuiamnhac.png" style="width:100%;object-fit:cover">
            </a>
        </div>
        <div class="col-3">
            <a href="#">
                <img src="https://nhasachphuongnam.com/images/promo/190/Banner-101Ways_To_Success.png" style="width:100%;object-fit:cover">
            </a>
        </div>
        <div class="col-3">
            <a href="#">
                <img src="https://nhasachphuongnam.com/images/promo/190/Banner-_Little_Books_Big_Meaning.png" style="width:100%;object-fit:cover">
            </a>
        </div>
    </div>
</div>

